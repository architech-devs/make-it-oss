{
  "name": "make-it-oss-server",
  "version": "1.0.0",
  "description": "Backend server for Make-it-OSS project. Helps automate making repos open source.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "NODE_ENV=production node index.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll"
  },
  "keywords": [
    "open-source",
    "github",
    "express",
    "hacktoberfest"
  ],
  "author": "Architech",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.22.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.0",
    "octokit": "^4.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
